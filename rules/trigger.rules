rule "Outside lights - off"
when
    Time cron "0 0 23 1/1 * ? *" or//11pm
    Time cron "0 59 23 1/1 * ? *" or//11:59pm
    Time cron "0 0 2 1/1 * ? *"//2am
then
	if(Outside_Lights.state == ON){
		Outside_Lights.sendCommand(OFF)
	}
end


