
rule "Pool Pump - off at night"
when
    Time cron "0 0 21 1/1 * ? *"
then
    Pool_Pump.sendCommand(0)
	pushover("Pool Pump - off for evening");
end


rule "Pool Pump - on in morning"
when
    Time cron "0 30 6 1/1 * ? *"
then
    Pool_Pump.sendCommand(25)
        pushover("Pool Pump - on - chlorine - morning");
end


rule "Pump Off"
when
	Item Pool_Pump changed to 0
then
	pushover("Pool Pump is Off")
end

rule "Pump Chlorine"
when 
	Item Pool_Pump changed to 25
then
	pushover("Pool Pump - Chlorine Speed")
end

rule "Pump Max"
when
	Item Pool_Pump changed to 100
then
	pushover("Pool Pump - Max Speed")
end

rule "Pump Heater"
when
	Item Pool_Pump changed to 50
then
	pushover("Pool Pump - Heater Speed")
end

