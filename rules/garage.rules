rule "10:30 off"
when 
    Time cron "0 0 21 1/1 * ? *"//9pm
then
    if(DianeGarageSensor.state == OPEN){
        pushover("9pm close Diane garage")
        DianeGarage.sendCommand(ON)
    }
    if(MikeGarageSensor.state == OPEN){
        pushover("9pm close Diane garage")
        MikeGarage.sendCommand(ON)
    }
end
